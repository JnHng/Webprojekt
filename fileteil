<?php
$title = "File Teilen";
include "conn.php";

$fileId = $_GET['fileid'];

?>
<body>
<?php
$result = $db->prepare("SELECT * from `files` WHERE fileid = $fileId");
$result->bindValue(':fileId', $fileId, PDO::PARAM_INT);
$result->fetchObject();


if($result == false) {
    echo "Die FileId ist nicht korrekt!";
exit();
}

echo md5($result->name);

?>
<img src="<?php echo $result->name; ?>" alt=""/>
</body>
</html>
